<div class="container mt-5">
    <div class="text-center">
        <h1>Words</h1>

        <%= link_to "Create New Word", new_admin_category_word_path, class: "btn btn-success mr-3"  %>

        <div class="row">
            <% @words.each do |word| %>
                <div class="col-md-6">
                    <section>
                        <div class="card text-left my-3">
                            <div class="card-header">
                                <small>Title:</small>
                                <%= link_to word.content, admin_category_word_path(word) %>
                            </div>

                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-7">
                                        <small>Choice1:</small>
                                        <p>###</p>
                                        <br>
                                        <small>Choice2:</small>
                                        <p>###</p>
                                        <br>
                                        <small>Choice3:</small>
                                        <p>###</p>
                                    </div>
                                    <div class="col-md-5">
                                        <%= link_to "Edit", edit_admin_category_word_path(word), class: "btn btn-outline-success mr-3" %>
                                        <%= link_to "Delete", admin_category_word_path(word),
                                            method: :delete,
                                            class: "btn btn-outline-danger mr-3" %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            <% end %>
        </div>
    </div>
</div>
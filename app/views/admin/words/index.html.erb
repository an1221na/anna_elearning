<div class="container mt-5">
    <div class="text-center">
        <h1>All Words</h1>

        <%= link_to "Create New Word", new_admin_category_word_path, class: "btn btn-pink my-3"%>

        <div class="paginate pagination justify-content-center my-3">
            <%= will_paginate :previous_label => '<', :next_label => '>' %>
        </div>

        <div class="row">
            <% @words.each do |word| %>
                <div class="col-md-6">
                    <section>
                        <div class="card text-left my-3">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-md-5">
                                        <small>Title:</small>
                                        <%=  word.content %>
                                    </div>
                                    <div class="col-md-7">
                                        <%= link_to "Edit", edit_admin_category_word_path(@category, word), class: "btn btn-sm btn-outline-success mr-3 w-25" %>
                                        <%= link_to "Delete", admin_category_word_path(@category, word),
                                            method: :delete,
                                            class: "btn btn-sm btn-outline-danger mr-3 w-25",
                                            data: {title: 'Confirmation',
                                                    confirm: 'Are you sure you want to delete?',
                                                    commit: 'Sure!',
                                                    cansel: 'No...'} %>
                                    </div>
                                </div>                                    
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-5 text-left">
                                        <p>Answer : <%= word.correct_answer %></p>
                                    </div>
                                    <div class="col-md-7 text-left">
                                        <% word.choices.each do |choice| %>
                                            <small>Choice : </small>
                                            <%= choice.content %>
                                            <br>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>                        
                    </section>
                </div>
            <% end %>
        </div>

        <div class="paginate pagination justify-content-center my-3">
            <%= will_paginate :previous_label => '<', :next_label => '>' %>
        </div>

        <%= link_to("Back to Category List", admin_categories_path, class: "btn btn-blue mx-auto mb-3") %>
    </div>
</div>
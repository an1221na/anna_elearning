<%= form_for [:admin, @category] do |f| %>
<%= render 'shared/error_messages', object: f.object %>
    <form class="container mx-auto">
        <div class="form-group">
            <%= f.label :title %><br>
            <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :description %><br>
            <%= f.text_area :description, class:"form-control" %>
        </div>
        <div class="form-group float-center">
            <% if @category.title %>
                <%= f.submit "Edit Category", class:"btn btn-block btn-green mt-3" %>
            <% else %>
                <%= f.submit "Create New Category", class:"btn btn-block btn-pink mt-3" %>
            <% end %>
        </div>
        <%= link_to("Back to Categories List", admin_categories_path, class: "btn btn-block btn-blue mx-auto mb-3") %>
    </form>
<% end %>
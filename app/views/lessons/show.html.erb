<div class="container mt-5">
    <div class="text-center">
        <h1><%= @lesson.category.title %> Result</h1>
        <p>This is your result!!</p>
        <small><%= @lesson.result %> of <%= @lesson.category.words.count %></small>
        <table class="table table-bordered">
            <thead class="table-info">
                <tr>
                    <th>Word</th>
                    <th>Your Answer</th>
                    <th>Correct Answer</th>
                    <th>Result</th>
                </tr>
            </thead>
            <tbody class="table-active">
                <% @answers.each do |answer| %>
                    <tr>
                        <td style="width:25%"><%= answer.word.content %></td>
                        <td style="width:25%"><%= answer.choice.content %></td>
                        <td style="width:25%"><%= answer.word.correct_answer %></td>
                        <td>
                            <% if answer.choice.correct  %>
                                <i class="fa fa-check-circle fa-lg correct_color"></i>
                            <% else %>
                                <i class="fa fa-times-circle fa-lg wrong_color"></i>
                            <% end %>                    
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>

        <div class="paginate pagination justify-content-center mb-3">
            <%= will_paginate @answers, :previous_label => '<', :next_label => '>' %>
        </div>

        <%= link_to "Lesson Page", categories_path, class: "btn btn-green mr-3" %>
        <%= link_to "Back to Home", root_path, class: "btn btn-blue mr-3" %>

    </div>
</div>